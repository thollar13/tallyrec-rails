
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <%= form_for [@team, @game] do |f| %>

        <div class="form-group row">
          <label for="example-text-input" class="col-2 col-form-label"><%= f.label :field %></label>
          <div class="col-10">
            <%= f.text_field :field, :required => true, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-2 col-form-label"><%= f.label :park %></label>
          <div class="col-10">
            <%= f.text_field :park, :required => true, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-2 col-form-label"><%= f.label :points_for %></label>
          <div class="col-10">
            <%= f.text_field :points_for, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-2 col-form-label"><%= f.label :points_against %></label>
          <div class="col-10">
            <%= f.text_field :points_against, class: 'form-control' %>
          </div>
        </div>

        <%= f.submit "Save Game" %>

      <% end %>
    </div>
  </div>
</div>

